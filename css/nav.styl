#navigation
  width 1000px
  margin 0 auto
  color $white

  ul
    padding 0
    margin 0
    
    li
      font-family "Open Sans"
      font-weight 700
      font-size 12px
      color #EFEFEF
      text-transform uppercase
      line-height 76px
      vertical-align: middle
      display inline-block
      text-align center
      margin-right 16px
      
      a
        text-decoration none
        color #efefef
      
        &hover
          text-decoration underline
          color #efefef
      
      &.last
        margin-right 0
      
      &.logo
        background-position center
        
        a
          img
            background-color $white
            padding 8px
            border-radius 4px

.right
  float right